@model TranTienPhat_2122110302.DB.Category

@{
    ViewBag.Title = "Details";
}
<div class="content-wrapper">
    <h2>Details</h2>

    <div>
        <h4>Category</h4>
        <hr />
        <style>
            .info-section {
                background: linear-gradient(135deg, #f9f9f9, #ffffff);
                padding: 20px;
                border-radius: 12px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                max-width: 700px;
                margin: 20px auto;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            .info-item {
                display: flex;
                align-items: center;
                margin-bottom: 20px;
                border-bottom: 1px solid #e0e0e0;
                padding-bottom: 10px;
            }

                .info-item:last-child {
                    border-bottom: none;
                }

                .info-item dt {
                    font-weight: bold;
                    color: #444;
                    min-width: 150px;
                    font-size: 18px;
                    display: flex;
                    align-items: center;
                }

                    .info-item dt i {
                        color: #ff6f61;
                        font-size: 22px;
                        margin-right: 10px;
                    }

                .info-item dd {
                    margin: 0;
                    color: #333;
                    font-size: 17px;
                    font-weight: 500;
                }

            .info-section dt, .info-section dd {
                transition: all 0.3s ease;
            }

            .info-item:hover dt, .info-item:hover dd {
                color: #ff6f61;
                transform: scale(1.05);
            }
        </style>

        <div class="info-section">
            <div class="info-item">
                <dt><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Name)</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>
            </div>

            <div class="info-item">
                <dt><i class="fas fa-eye"></i> @Html.DisplayNameFor(model => model.Show)</dt>
                <dd>@Html.DisplayFor(model => model.Show)</dd>
            </div>

            <div class="info-item">
                <dt><i class="fas fa-image"></i> @Html.DisplayNameFor(model => model.Image)</dt>
                <dd>@Html.DisplayFor(model => model.Image)</dd>
            </div>
        </div>

        <!-- Include Font Awesome for icons -->
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
    </div>